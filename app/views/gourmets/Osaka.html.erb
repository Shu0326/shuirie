  <div class="Osaka-intro-container1">
    <div class="d-demo-Osaka">
      <div class="d-demo__wrap-Osaka">
        <div class="d-demo__list-Osaka d-demo__list--left-Osaka">
          <div class="d-demo__item-Osaka"><%= image_tag "Takoyaki1.jpg", class:"slide-image0" %></div>
          <div class="d-demo__item-Osaka"><%= image_tag "Okonomiyaki1.jpg", class:"slide-image0" %></div>
