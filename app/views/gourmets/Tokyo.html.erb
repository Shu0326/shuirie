<div class="Tokyo-intro-container1">
  <div class="d-demo-Tokyo">
    <div class="d-demo__wrap-Tokyo">
      <div class="d-demo__list-Tokyo d-demo__list--left-Tokyo">
        <div class="d-demo__item-Tokyo"><%= image_tag "Edomaezushi1.jpg", class:"slide-image0" %></div>
        <div class="d-demo__item-Tokyo"><%= image_tag "Monzyayaki1.jpg", class:"slide-image0" %></div>
