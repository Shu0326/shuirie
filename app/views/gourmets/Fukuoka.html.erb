  <div class="Fukuoka-intro-container1">
    <div class="d-demo-Fukuoka">
      <div class="d-demo__wrap-Fukuoka">
        <div class="d-demo__list-Fukuoka d-demo__list--left-Fukuoka">
          <div class="d-demo__item-Fukuoka"><%= image_tag "Motunabe1.jpg", class:"slide-image0" %></div>
          <div class="d-demo__item-Fukuoka"><%= image_tag "Hakataramen1.jpg", class:"slide-image0" %></div>
          <div class="d-demo__item-Fukuoka"><%= image_tag "Mizutaki1.jpg", class:"slide-image0" %></div>
